// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Message {
  id        String   @id @default(uuid())
  sender    String   // "user" or "ai"
  content   String   @db.Text
  timestamp DateTime @default(now())
  
  @@index([timestamp])
  @@map("messages")
}
